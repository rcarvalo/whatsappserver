# ===========================================
# WHATSAPP EXTRACTOR (SELENIUM - OPTIONNEL)
# ===========================================
# Utilisé seulement pour l'extraction d'historique ancien
# Peut être désactivé si vous utilisez uniquement l'API temps réel

# Chemin pour sauvegarder le profil Chrome (persiste la connexion)
CHROME_PROFILE_PATH=./chrome_profile

# Mode sans interface graphique (true/false)
HEADLESS_MODE=false

# Timeout pour les opérations WhatsApp (en secondes)
WHATSAPP_TIMEOUT=30

# ===========================================
# CONFIGURATION GENERALE
# ===========================================
# Niveau de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Dossier pour les logs
LOG_DIRECTORY=./logs

# Taille maximum des lots pour le traitement
BATCH_SIZE=100

# ===========================================
# RECHERCHE ET IA
# ===========================================
# Seuil de similarité pour les recherches (0.0 à 1.0)
SIMILARITY_THRESHOLD=0.7

# Nombre maximum de résultats par recherche
MAX_SEARCH_RESULTS=10

# Nombre maximum de tokens pour les réponses
MAX_RESPONSE_TOKENS=500

# ===========================================
# SECURITE (PRODUCTION)
# ===========================================
# Clé de chiffrement pour les données sensibles (génération aléatoire recommandée)
# ENCRYPTION_KEY=your-32-character-encryption-key

# Autoriser seulement HTTPS (true/false)
# FORCE_HTTPS=true

# ===========================================
# MONITORING (OPTIONNEL)
# ===========================================
# URL de webhook pour les alertes
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/...

# Sentry DSN pour le monitoring d'erreurs
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# PERFORMANCE
# ===========================================
# Taille du cache pour les embeddings
EMBEDDING_CACHE_SIZE=1000

# Timeout pour les requêtes HTTP (en secondes)
HTTP_TIMEOUT=30

# Nombre de workers pour le traitement parallèle
# WORKER_COUNT=4

# ===========================================
# DEVELOPMENT
# ===========================================
# Mode debug (true/false)
DEBUG_MODE=false

# Sauvegarder les requêtes pour debug
# SAVE_DEBUG_REQUESTS=false

# Utiliser le cache local pour les tests
# USE_LOCAL_CACHE=true
